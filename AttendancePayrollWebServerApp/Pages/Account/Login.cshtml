@page
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@model AttendancePayrollWebServerApp.Pages.Account.LoginModel
@* <link rel="icon" type="image/x-icon" href="/favicon.ico?v=@DateTime.Now.Ticks" /> *@


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Attendance Payroll</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
        }

        .login-container {
            max-width: 400px;
            width: 100%;
            padding: 1.5rem;
        }

        .login-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background: #ffffff;
            transition: transform 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-5px);
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 0.75rem;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                outline: none;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            padding: 0.75rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .error-message {
            color: #dc3545;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        .logo {
            max-width: 100px;
            margin-bottom: 1.5rem;
        }

        .forgot-password {
            display: block;
            text-align: center;
            margin-top: 1rem;
            color: #6c757d;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .forgot-password:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card p-4">
            <div class="text-center">
                <img src="/images/RKrkLogin.png" alt="Company Logo" class="logo" /> <!-- Replace with your logo path -->
                <h3 class="mb-4">Login</h3>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }

            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" name="ReturnUrl" />
                <div class="mb-3">
                    <label asp-for="Model.UserName" class="form-label">Username</label>
                    <input asp-for="Model.UserName" name="Model.UserName" type="text" class="form-control" placeholder="Enter your username" required />
                    <span asp-validation-for="Model.UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Model.Password" class="form-label">Password</label>
                    <input asp-for="Model.Password" name="Model.Password" type="password" class="form-control" placeholder="Enter your password" required />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
             @*    <a href="/Account/ForgotPassword" class="forgot-password">Forgot Password?</a> *@
            </form>
        </div>
    </div>
</body>
</html>






